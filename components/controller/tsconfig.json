{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ESNext"],
    "outDir": "dist",
    "baseUrl": "./src",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "scripts/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
